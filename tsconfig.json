{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "target": "ES2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "lib": ["esnext"],
        "paths": {
            "@flow/config/*": ["src/config/*"],
            "@flow/modules/*": ["src/modules/*"],
            "@flow/utils/*": ["src/utils/*"]
        }
    }
}
